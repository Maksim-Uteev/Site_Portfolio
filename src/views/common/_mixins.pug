mixin icon(iconName, iconClass)
  svg(class=`${iconClass}`)
    use(xlink:href=`/assets/images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
  img(src=`/assets/images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin socials(mod, data)
  ul(class=`socials-list socials-list--${mod}`)
    each icon, index in ['vk', 'github', 'in']
      li.socials-list__item
        a.socials-list__link(href=data[index], target="_blank")
          +icon(icon, `socials-list__icon socials-list__icon--${icon}`)